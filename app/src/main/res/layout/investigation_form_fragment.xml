<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Case.InvestigationFormFragment">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_background"
        android:padding="16dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Add Investigation"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/suspect"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Suspect"
        android:textSize="19dp"/>

    <Button
        android:id="@+id/witness"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Witness"
        android:textSize="19dp"/>
    <Button
        android:id="@+id/Victim"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Victim"
        android:textSize="19dp"/>
    <Button
        android:id="@+id/evidence"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Evidance"
        android:textSize="19dp"/>
    <Button
        android:id="@+id/incident_photo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Photo"
        android:textSize="19dp"/>
</LinearLayout>